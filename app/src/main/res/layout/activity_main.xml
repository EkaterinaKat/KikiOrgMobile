<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="?android:attr/buttonBarStyle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.katyshevtseva.kikiorgmobile.view.MainActivity">

    <Button
        android:id="@+id/admin_button"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        android:background="@mipmap/icon_settings" />

    <TextView
        android:id="@+id/main_date_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:textColor="@color/black"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/alarm_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_date_text_view"
        android:layout_margin="12dp"
        android:background="@color/alarmColor"
        android:padding="20dp"
        android:text="Остались незавершенные задачи за прошедшие даты!"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="25sp" />


    <LinearLayout
        android:id="@+id/task_list_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/alarm_text_view"
        android:orientation="horizontal" />

</RelativeLayout>