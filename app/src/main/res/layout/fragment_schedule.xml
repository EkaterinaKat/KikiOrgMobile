<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.katyshevtseva.kikiorgmobile.view.ScheduleFragment">

    <TextView
        android:id="@+id/schedule_alarm_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:background="@color/alarmColor"
        android:padding="20dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ScrollView
            android:layout_width="244dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/intervals_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/day_gradient"
                android:orientation="vertical">

            </LinearLayout>
        </ScrollView>

        <RelativeLayout
            android:layout_width="168dp"
            android:layout_height="match_parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_marginTop="1dp">

                <LinearLayout
                    android:id="@+id/not_scheduled_box"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                </LinearLayout>
            </ScrollView>

            <LinearLayout
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@drawable/radial">

                <Button
                    android:id="@+id/plus_scale_button"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:text="+" />

                <Button
                    android:id="@+id/minus_scale_button"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:text="-" />
            </LinearLayout>

        </RelativeLayout>


    </LinearLayout>


</LinearLayout>